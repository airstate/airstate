{
    "include": [
        "./scripts/**/*",
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "disableSizeLimit": true,
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "./scripts",
        "moduleResolution": "NodeNext",
        "sourceRoot": "./scripts",
        "lib": [],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "allowJs": false,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "jsx": "react"
    }
}