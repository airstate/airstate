---
import MainLayout from '../layouts/main.astro';

const links = [
	'/scratch',
	'/examples/drawing-pad',
	'/copy'
];
---

<MainLayout>
	<div class="p-10">
		<h1 class="text-2xl mb-5">AirState Examples</h1>
		<ol class="list-decimal">
			{links.map(link => {
				return (
					<li>
						<a href={link} class="text-stone-800 underline underline-offset-2">
							{link}
						</a>
					</li>
				)
			})}
		</ol>
		<div class="mt-8 p-4 bg-blue-50 rounded-lg">
			<h2 class="text-lg font-semibold mb-2">Quick Start</h2>
			<a href="/tic-tac-toe" class="text-blue-600 hover:text-blue-800 underline">
