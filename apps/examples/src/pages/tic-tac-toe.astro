---
import Layout from '../layouts/Layout.astro';
import TicTacToeGame from '../components/TicTacToeGame';

// Get the joining key from URL parameters
const url = new URL(Astro.request.url);
const joiningKey = url.searchParams.get('joiningKey');
---

<Layout title="Multiplayer Tic-Tac-Toe">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8">Multiplayer Tic-Tac-Toe</h1>
    <TicTacToeGame client:only="react" />
  </main>
</Layout> 